<%- partial ('../partials/topbar-without-menu.ejs') %>
<section id="gitlist-top-abstand"></section>
<div class="container" id="gitlist-forgot-password-top-1">
    <div class="row">
        <div class="col-md-6 col-md-offset-3" id="gitlist-forgot-password">
            <h4 style="border-bottom: 1px solid rgba(197, 197, 197, 0.27);">
                <i class="fa fa-user" id="gitlist-user-icon"></i>Account Access
                <br>
            </h4>
            Please enter your e-mail address below. A link with instructions to reset your password will be sent to you.
            <div style="padding: 20px;" id="form-olvidado">
                <div id="login-form">
                    <div class="form-group input-group">
                        <span class="input-group-addon" style="border-radius: 4px; border-bottom-right-radius: 0; border-top-right-radius: 0;">@</span>
                        <input id="forgotEmail" class="form-control" placeholder="Email" name="email" type="email" required="" autofocus="" style="border-radius: 4px; border-bottom-left-radius: 0; border-top-left-radius: 0; ">
                    </div>
                    <div class="form-group">                     
                        <p class="help-block">
                            <a class="forgot-password-button btn btn-gitlist-forgot-password-front" id="color-blue">Send</a>
                          <!--  <a class="pull-right text-muted" href="#" id="olvidado"><small>Forgot your password?</small></a> --> 
                        </p>
                    </div>
                </div>
            </div>
            <div style="display: none;" id="form-olvidado">
                <h4 class="">Forgot your password?</h4>
                <form accept-charset="UTF-8" role="form" id="login-recordar" method="post">
                    <fieldset>
                        <span class="help-block">
                            Email address you use to log in to your account
                            <br>
                            We'll send you an email with instructions to choose a new password.
                        </span>
                        <div class="form-group input-group">
                            <span class="input-group-addon">@</span>
                            <input class="form-control" placeholder="Email" name="email" type="email" required="">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" id="btn-olvidado">Continue</button>
                        <p class="help-block">
                            <a class="text-muted" href="#" id="acceso"><small>Account Access</small></a>
                        </p>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".forgot-password-button").click(function(){
      var email = $("#forgotEmail").val();
      if (email) {
          $.post(
              '/forgot',
              {email: email},
              function () {
                $.notify("Please check your Email!", "success");
  //                window.location = "/forgot";
              }
          ).fail(function(res){
              $.notify("Error!", "error");
          });
      } else {
          $.notify("Email is required", "error");
      }
    });
</script> 